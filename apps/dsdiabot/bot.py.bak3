        # –ò—â–µ–º –ø—Ä–æ–¥—É–∫—Ç –≤ –±–∞–∑–µ
        product = db.get_product_exact(product_name)
        if not product:
            # –ü–æ–ø—Ä–æ–±—É–µ–º –ø–æ–∏—Å–∫ –ø–æ –ø–æ–¥—Å—Ç—Ä–æ–∫–µ, –µ—Å–ª–∏ —Ç–æ—á–Ω–æ–≥–æ —Å–æ–≤–ø–∞–¥–µ–Ω–∏—è –Ω–µ—Ç
            results = db.search_product(product_name)
            if results:
                # –ï—Å–ª–∏ –µ—Å—Ç—å —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã, –ø—Ä–µ–¥–ª–æ–∂–∏–º –≤—ã–±—Ä–∞—Ç—å
                msg = f"üîç –ù–∞–π–¥–µ–Ω–æ –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø—Ä–æ–¥—É–∫—Ç–æ–≤ –ø–æ –∑–∞–ø—Ä–æ—Å—É '{product_name}':\n"
                for name, xe, desc in results[:5]:
                    msg += f"‚Ä¢ {name.capitalize()} ‚Äî {xe} –•–ï/100–≥\n"
                msg += "–£—Ç–æ—á–Ω–∏—Ç–µ –∑–∞–ø—Ä–æ—Å –∏–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ —Ç–æ—á–Ω–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ."
                await update.message.reply_text(msg)
                return
            else:
                await update.message.reply_text(f"‚ùå –ü—Ä–æ–¥—É–∫—Ç '{product_name}' –Ω–µ –Ω–∞–π–¥–µ–Ω. –î–æ–±–∞–≤—å—Ç–µ –µ–≥–æ –∫–æ–º–∞–Ω–¥–æ–π /add_product")
                return
        xe_per_100g, desc = product
        carbs = (weight / 100) * xe_per_100g
        db.add_meal(user_id, carbs)
        await update.message.reply_text(f"‚úÖ –ó–∞–ø–∏—Å–∞–Ω–∞ –µ–¥–∞: {weight}–≥ {product_name.capitalize()} = {carbs:.2f} –•–ï")
